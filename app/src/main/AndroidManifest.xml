<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tmbb"
    android:versionCode="4"
    android:versionName="1.3">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.telephony"></uses-feature>


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launchersplash"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyTheme">
        <activity
            android:name=".DetailViewActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.tmbb.SmsListActivity"
            android:screenOrientation="portrait">


        </activity>
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SmsListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>
